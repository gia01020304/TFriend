@{
    ViewBag.Template = "Template/AddEditFriend";
    ViewBag.FormId = "frm-Friend";
    ViewBag.TableId = "tbl-Friend";
}
<partial name="_Modal"/>
<h3> My Friend</h3>
<div class="col-sm-12">
    <div class="panel panel-default card-view">
        <div class="panel-wrapper collapse in">
            <div class="panel-body row">
                <div id="wrap-btn-add-@ViewBag.TableId"></div>
                <div class="table-wrap">
                    <div class="table-responsive">
                        <table class="table display responsive tbl-crud" id="@ViewBag.TableId">
                            <thead>
                                <tr>
                                    <th class="all"></th>
                                    <th class="all"></th>
                                    <th class="all"></th>
                                    <th class="all"></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
         generateTable(
                {
                    IdTable: '@ViewBag.TableId',
                    IdFrm: '@ViewBag.FormId',
                    TitleModal: 'Friend',
                    FixedColumn: 1,
                    ReadAction: '@Url.Action("GetListFriend", "Friend")',
                    AddAction: '@Url.Action("AddFriend", "Friend")',
                    EditAction: '@Url.Action("EditFriend", "Friend")',
                    DelAction: '@Url.Action("DelFriend", "Friend")',
                    IsManage: true
             },
             [
                 {
                     data: "imagePath", title: "Image",
                     render: function (data) {
                         return "<img src=\""+data+"\"  width=\"80\">";
                     }
                 },
                 { data: "name", title: "Name" },
                 { data: "dateOfBirth", title: "Birthday" },
                 getTemplateEditDel()
             ]
         )
    })
</script>
